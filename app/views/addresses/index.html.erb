<div class="container">

  <div class="row">
    <div class="col-md-10 mx-auto">
      <div class="text-dark bg-light d-inline-block mt-4 mb-4">
        <h5>配送先登録/一覧</h5>
      </div>
    </div>
  </div>

  <%= form_with model: @address, url: addresses_path, local: true do |f| %>
  <div class="row">
    <div class="col">

      <div class="row form-group">
        <p class="col-lg-3 pt-1">郵便番号（ハイフンなし）</p>
        <%= f.text_field :postcode, placeholder: "0000000", class: "form-control col-lg-3"%>
      </div>

      <div class="row form-group">
        <p class="col-lg-3 pt-1">住所</p>
        <%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0", class: "form-control col-lg-6" %>
      </div>

      <div class="row form-group">
        <p class="col-lg-3 pt-1">宛名</p>
        <%= f.text_field :name, placeholder: "令和道子", class: "form-control col-lg-3" %>
        <div class="col-lg-3">
          <%= f.submit "新規登録", class: "btn btn-success px-4" %>
        </div>
      </div>

    </div>
  </div>
  <% end %>

  <div class="row">
    <div class="col">
      <table class="table table-bordered">
        <thead class="bg-light">
          <tr>
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
            <th colspan="2"></th>
          </tr>
        </thead>
        <tbody>
          <% @addresses.each do |address| %>
          <tr>
            <td><%= address.postcode %></td>
            <td><%= address.address %></td>
            <td><%= address.name %></td>
            <td colspan="2">
              <div class="row">
                <div class="text-center col-lg-4 px-2">
                  <%= link_to "編集する", edit_address_path(address.id), class: "btn btn-success" %>
                </div>
                <div class="text-center col-lg-4 px-2">
                  <%= link_to "削除する", address_path(address.id), method: :delete, class: "btn btn-danger" %>
                </div>
              </div>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>