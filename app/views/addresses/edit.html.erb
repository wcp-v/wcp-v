<div class="container">
    <div class="row">
        <div class="col-md-10 mx-auto">
            <div class="text-dark bg-light d-inline-block mt-4 mb-4">
                <h5>配送先編集</h5>
            </div>
        </div>
    </div>
    <%= form_with model: @address, url: address_path(@address.id), local: true do |f| %>
    <div class="row">
        <div class="col">
            <div class="row form-group">
                <p class="col-lg-3 pt-1">郵便番号（ハイフンなし）</p>
                <%= f.text_field :postcode, class: "form-control col-lg-3" %>
            </div>

            <div class="row form-group">
                <p class="col-lg-3 pt-1">住所</p>
                <%= f.text_field :address, class: "form-control col-lg-6" %>
            </div>

            <div class="row form-group">
                <p class="col-lg-3 pt-1">宛名</p>
                <%= f.text_field :name, class: "form-control col-lg-3" %>
                <div class="col-lg">
                    <%= f.submit "変更内容を保存", class: "btn btn-success" %>
                </div>
            </div>
        </div>
    </div>
    <% end %>
</div>