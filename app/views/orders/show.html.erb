<div class="container">
<h2>注文履歴詳細</h2>
 <div class="row mt-5">
    <div class="col-md-8">
      <h4>注文情報</h4>
  	    <table class="table table-bordered table-condensed mt-0 customer-order-info">
          <tbody>
              <tr>
                <th class="info border border-dark table-active order">注文日</th>
          	  <td class="text-left border border-dark order-content"><%= l @order.created_at, format: :short %></td>
              </tr>
              <tr>
              　<th class="info border border-dark table-active">配送先</th>
                <td class="text-left border border-dark">
                  <%= @order.postcode %><br>
                  <%= @order.address %><br>
                  <%= @order.destination %>
                </td>
              </tr>
              <tr>
              　<th class="info border border-dark table-active">支払方法</th>
                <td class="text-left border border-dark"><%= @order.payment %></td>
              </tr>
              <tr>
                <th class="info border border-dark table-active">ステータス</th>
                <td class="text-left border border-dark"><%= @order.order_status %></td>
              </tr>
          </tbody>
        </table>
    </div>
    <div class="col-md-4">
          <h4 class="mb-4 pb-2">請求情報</h4>
        	<table class="table table-bordered table-condensed">
            <tr>
              <th class="info border border-dark table-active">商品合計</th>
              <td class="col-xs-5 border border-dark"><%= @order.total_price.to_s(:delimited) %>円</td>
            </tr>
            <tr>
              <th class="info border border-dark table-active">配送料</th>
              <td class="col-xs-5 border border-dark"><%= @order.postage.to_s(:delimited) %>円</td>
            </tr>
            <tr>
              <th class="info border border-dark table-active">ご請求金額</th>
              <td class="col-xs-5 border border-dark"><%= (@order.total_price + @order.postage).to_s(:delimited) %>円</td>
            </tr>
        </table>
    </div>
  </div>

  <div class="row">
    <div class="col-md-10">
    	<h4 class="mb-4 pb-1 mt-3">注文内容</h4>
        <table class="table table-bordered table-condensed cutomer-order-detail">
  	      <tr>
  	      	<th class="border border-dark table-active item">商品</th>
  	        <th class="border border-dark table-active price">単価(税込)</th>
  	      	<th class="border border-dark table-active quantity">個数</th>
  	      	<th class="border border-dark table-active subprice">小計</th>
  	      </tr>
        	<% @item_orders.each do |item_order| %>
            <tr>
  	        <td class="border border-dark"><%= item_order.item.name %></td>
  	        <td class="text-right border border-dark"><%= item_order.tax_price.to_s(:delimited) %>円</td>
  	        <td class="text-right border border-dark"><%= item_order.quantity %></td>
  	        <td class="text-right border border-dark"><%= (item_order.tax_price*item_order.quantity).to_s(:delimited) %>円</td>
            </tr>
          <% end %>
        </table>
    </div>
  </div>
</div>