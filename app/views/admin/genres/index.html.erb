<div class="container my-4">
  <div class="row">
    <div class="col-md-6">
      <h4 class="mt-2">ジャンル一覧・追加</h3>
      <%= form_with model: [:admin, @genre], local: true do |f| %>
      <table class="mt-3 mb-3 ">
        <thead>
          <tr>
            <th>ジャンル名</th>
            <th><%= f.text_field :name %></th>
            <th><%= f.submit "新規登録", class:"btn btn-sm btn-success" %></th>
          </tr>
        </thead>
      </table>
      <% end %>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-md-6">
      <table class="table-light table table-hover table-inverse">
        <thead class="thead-light">
          <tr>
            <th>ジャンル</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td><%= link_to "編集する", edit_admin_genre_path(genre) %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="center-block mx-auto">
      <%= paginate @genres %>
    </div>
  </div>
</div>