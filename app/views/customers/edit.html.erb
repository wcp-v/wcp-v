<div class="container">
  <div class="row no-gutters my-5">
    <h4 class="text-dark bg-light p-1 mb-1">会員情報編集</h4>
  </div>
  <div class="row mb-5">
  <div class="offset-sm-1 col-sm-8">
    <%= form_with model: @customer, url: customers_path, method: :patch, local: true do |f| %>
      <div class="form_group row col-sm-12 mb-2">
        <%= f.label :name, "氏名", class: "col-sm-3 col-form-label" %>
        <%= f.text_field :last_name, class: "col-sm-3 mr-3 form-control" %>
        <%= f.text_field :first_name, class: "col-sm-3 form-control" %>
      </div>
      <div class="form_group row col-sm-12 mb-2">
        <%= f.label :name, "フリガナ", class: "col-sm-3 col-form-label" %>
        <%= f.text_field :last_name_kana, class: "col-sm-3 mr-3 form-control" %>
        <%= f.text_field :first_name_kana, class: "col-sm-3 form-control" %>
      </div>
      <div class="form_group row col-sm-12 mb-2">
        <%= f.label :postcode, "郵便番号", class: "col-sm-3 col-form-label" %>
        <%= f.text_field :postcode, class: "col-sm-3 form-control" %>
      </div>
      <div class="form_group row col-sm-12 mb-2">
        <%= f.label :address, "住所", class: "col-sm-3 col-form-label" %>
        <%= f.text_field :address, class: "col-sm-8 form-control" %>
      </div>
      <div class="form_group row col-sm-12 mb-2">
        <%= f.label :telephone_number, "電話番号", class: "col-sm-3 col-form-label" %>
        <%= f.text_field :telephone_number, class: "col-sm-3 form-control" %>
      </div>
      <div class="form_group row col-sm-12 mb-2">
        <%= f.label :email, "メールアドレス", class: "col-sm-3 col-form-label" %>
        <%= f.text_field :email, class: "col-sm-3 form-control" %>
      </div>
      <div class="offset-sm-3 col-sm-8 mt-4">
        <%= f.submit "編集内容を保存", class: "btn btn-sm btn-success mr-5", style: "width: 190px" %>
        <%= link_to '退会する', customers_unsubscribe_path, class: "btn btn-sm btn-danger ml-5", style: "width: 90px" %>
      </div>
    <% end %>
  </div>
</div>
</div>